{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@useCases/*": ["./src/useCases/*"],
      "@structures/*": ["./src/structures/*"],
      "@shared/*": ["./src/shared/*"],
      "@api/*": ["./src/api/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
